# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# OpenRouter (替代 OpenAI)
OPENAI_API_KEY=sk-or-v1-your-openrouter-api-key
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=qwen/qwen-2.5-72b-instruct

# Site
NEXT_PUBLIC_SITE_URL=https://agentsignals.ai
NEXT_PUBLIC_SITE_NAME=Agent Signals

# Crawler
CRAWLER_MAX_AGENTS_PER_RUN=50
CRAWLER_SOURCE=github  # 'gpt-store' | 'github' | 'all'

# Crawler V2 (优化版本)
CRAWLER_TOPICS=ai-agent,llm,chatgpt  # 多个topic用逗号分隔
CRAWLER_CONCURRENCY=3                 # 并发处理数量（推荐2-5）
CRAWLER_BATCH_DELAY=2000             # Topic间延迟(ms)
CRAWLER_SCHEDULE=daily_premium       # 调度策略: test|daily_premium|weekly_full

# GitHub API (用于 GitHub 爬虫)
GITHUB_TOKEN=github_pat_YOUR_GITHUB_TOKEN_HERE
GITHUB_TOPIC=ai-agent
GITHUB_MIN_STARS=100

# Cron Security (生产环境必须设置)
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your-random-secret-string

# 邮件服务 (Resend)
RESEND_API_KEY=re_xxxxxxxxxx
EMAIL_FROM=Agent Signals <noreply@agentsignals.ai>

# 管理员邮箱（多个用逗号分隔，无限制上传）
ADMIN_EMAILS=253553962@qq.com

